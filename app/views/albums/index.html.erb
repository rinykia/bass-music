<div class="row">
  <% @albums.each do |a| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <img src="<%= a.cover %>">
        <div class="caption">
          <h3 class="title"><%= a.title %></h3>
          <p class="artist"><%= a.artist %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
  
